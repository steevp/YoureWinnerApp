<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="?attr/ic_action_first"
        android:onClick="goFirstPage"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="?attr/ic_action_previous"
        android:onClick="previousPage"/>

    <Button
        android:id="@+id/curpage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:onClick="selectPage"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="?attr/ic_action_next"
        android:onClick="nextPage"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="?attr/ic_action_last"
        android:onClick="goLastPage"/>

</LinearLayout>