<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="?attr/ic_action_first"
        android:onClick="goFirstPage"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="?attr/ic_action_previous"
        android:onClick="previousPage"/>

    <TextView
        android:id="@+id/curpage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:gravity="center"
        android:onClick="selectPage"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="?attr/ic_action_next"
        android:onClick="nextPage"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="?attr/ic_action_last"
        android:onClick="goLastPage"/>

</LinearLayout>