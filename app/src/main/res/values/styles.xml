<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />
    <style name="GayPrideTheme" parent="GayPrideTheme.Base" />
    <style name="StonerTheme" parent="StonerTheme.Base" />
    <style name="DarkTheme" parent="DarkTheme.Base" />
    <style name="LightTheme" parent="LightTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/winnerOrange</item>
        <item name="background_dialog">@color/winnerBlue</item>
        <item name="colorPrimaryDark">@color/winnerOrangeDark</item>
        <item name="colorAccent">@color/winnerOrangeDark</item>
        <item name="android:windowBackground">@color/winnerBlue</item>
        <item name="android:textColorPrimary">@color/fontColor</item>
        <item name="android:textColorSecondary">@color/fontColor</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textColorLink">@color/colorLink</item>
        <item name="color_username">@color/colorLink</item>
        <item name="ic_action_first">@drawable/ic_action_first</item>
        <item name="ic_action_previous">@drawable/ic_action_previous</item>
        <item name="ic_action_next">@drawable/ic_action_next</item>
        <item name="ic_action_last">@drawable/ic_action_last</item>
    </style>

    <style name="GayPrideTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/winnerPink</item>
        <item name="background_dialog">@color/winnerPurple</item>
        <item name="colorPrimaryDark">@color/winnerPinkDark</item>
        <item name="colorAccent">@color/winnerPinkDark</item>
        <item name="android:windowBackground">@color/winnerPurple</item>
        <item name="android:textColorPrimary">@color/fontColor</item>
        <item name="android:textColorSecondary">@color/fontColor</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textColorLink">@color/winnerPinkLink</item>
        <item name="color_username">@color/winnerPinkLink</item>
        <item name="ic_action_first">@drawable/ic_action_first</item>
        <item name="ic_action_previous">@drawable/ic_action_previous</item>
        <item name="ic_action_next">@drawable/ic_action_next</item>
        <item name="ic_action_last">@drawable/ic_action_last</item>
    </style>

    <style name="StonerTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/winnerSilverDark</item>
        <item name="background_dialog">@color/winnerGreen</item>
        <item name="colorPrimaryDark">@color/winnerSilverDark</item>
        <item name="colorAccent">@color/winnerSilverDark</item>
        <item name="android:windowBackground">@color/winnerGreen</item>
        <item name="android:textColorPrimary">@color/fontColor</item>
        <item name="android:textColorSecondary">@color/fontColor</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textColorLink">@color/winnerYellow</item>
        <item name="color_username">@color/winnerYellow</item>
        <item name="ic_action_first">@drawable/ic_action_first</item>
        <item name="ic_action_previous">@drawable/ic_action_previous</item>
        <item name="ic_action_next">@drawable/ic_action_next</item>
        <item name="ic_action_last">@drawable/ic_action_last</item>
    </style>

    <style name="DarkTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="color_username">@color/colorLink</item>
        <item name="background_dialog">#ff212121</item>
        <item name="ic_action_first">@drawable/ic_action_first</item>
        <item name="ic_action_previous">@drawable/ic_action_previous</item>
        <item name="ic_action_next">@drawable/ic_action_next</item>
        <item name="ic_action_last">@drawable/ic_action_last</item>
    </style>

    <style name="LightTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="color_username">@color/colorLink</item>
        <item name="background_dialog">#fff5f5f5</item>
        <item name="ic_action_first">@drawable/ic_action_first_dark</item>
        <item name="ic_action_previous">@drawable/ic_action_previous_dark</item>
        <item name="ic_action_next">@drawable/ic_action_next_dark</item>
        <item name="ic_action_last">@drawable/ic_action_last_dark</item>
    </style>

    <color name="winnerOrange">#BE752A</color>
    <color name="winnerOrangeDark">#9F5D18</color>
    <color name="winnerBlue">#211C45</color>
    <color name="fontColor">#FFF</color>
    <color name="colorLink">#D28333</color>

    <color name="winnerPinkDark">#96017C</color>
    <color name="winnerPink">#BE2AA4</color>
    <color name="winnerPurple">#3C1C45</color>
    <color name="winnerPinkLink">#D233B7</color>

    <color name="winnerSilver">#EBEBEB</color>
    <color name="winnerSilverDark">#C7C7C7</color>
    <color name="winnerGreen">#1E3F1E</color>
    <color name="winnerYellow">#FF6</color>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/semiTransparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <color name="semiTransparent">#c0000000</color>
    <color name="grey">#BEBEBE</color>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <!-- animation for dialog box -->
    <style name="DialogSlideAnim" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="colorAccent">@null</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">?attr/background_dialog</item>
    </style>

</resources>
